@model IEnumerable<Models.Course>

@{
    ViewBag.Title = "Course";
}

<div class="container">

    <div>
        <h2>Manage Course</h2>

        <div class="nav navbar-right">
            <p class="{{isRoleTeacher}}">@Html.ActionLink("Create New", "Create")</p>
        </div>


        <div class="tabbable" ng-controller="CourseCtrl">
            <!-- Only required for left/right tabs -->
            <ul class="nav nav-pills">
                <li class="active"><a href="#tab1" data-toggle="tab">Topic</a></li>
                <li><a href="#tab2" data-toggle="tab">Grade</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Subject)
                            </th>
                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td class="{{isRoleTeacher}}">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="tab-pane" id="tab2">
                    <p>Howdy, I'm in Section 2.</p>
                </div>
            </div>
        </div>

    </div>

