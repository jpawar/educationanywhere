@model IEnumerable<Models.Course>

@{
    ViewBag.Title = "Course";
}

<div class="container">

    <div ng-controller="CourseCtrl">
        <h2>Manage Course</h2>

        <div class="nav navbar-right">
            <a data-toggle="modal" href="#createNewCourseModal" class="btn btn-primary {{isRoleTeacher}}">Create Course</a>            
        </div>

        <div class="modal" id="createNewCourseModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4>Add Course</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal">
                            <div class="controls" style="margin-bottom: 15px;">
                                <input type="text" placeholder="Course Name" class="form-control" ng-model="course.name">
                            </div>

                            <div class="controls">
                                <select name="grade" ng-model="course.grade">
                                    <option value=""></option>
                                    <option value="0">K</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn" data-dismiss="modal">Close</a>
                        <button type="button" class="btn btn-primary" ng-click="createCourse()">Submit</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="tabbable">
            <!-- Only required for left/right tabs -->
            <ul class="nav nav-pills">
                <li class="active"><a href="#tab1" data-toggle="tab">Topic</a></li>
                <li><a href="#tab2" data-toggle="tab">Grade</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Subject)
                            </th>
                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td class="{{isRoleTeacher}}">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="tab-pane" id="tab2">
                    <p>Howdy, I'm in Section 2.</p>
                </div>
            </div>
        </div>
    </div>

