<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrapcss")
</head>
<body ng-app="myApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">Education Anywhere</a>
            </div>
            <div class="navbar-collapse collapse" ng-controller="SignInCtrl">
                <form class="navbar-form navbar-left" ng-submit="signOnUser()">
                    <div class="form-group {{visibility}}">
                        <input type="text" placeholder="Email" class="form-control" ng-model="emailAddress">
                    </div>
                    <div class="form-group {{visibility}}">
                        <input type="password" placeholder="Password" class="form-control" ng-model="password">
                    </div>
                    <button type="submit" class="btn btn-success {{visibility}}">Sign in</button>
                </form>
                    <span class="navbar-brand">{{userName}}</span>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">About</a></li>                                        
                    <li><a href="#">Contact</a></li>                                        
                    <li><button style="margin:7px" type="button" class="btn btn-success {{userNameVisible}}" ng-click="signOutUser()">Sign Out</button></li>
                    <li class="{{visibility}}"><a href="~/Registration/Register">Create Account</a></li>                    
                </ul>                
            </div>
            <!--/.navbar-collapse -->
        </div>
    </div>

    @RenderBody()

    <div class="container">
        <hr>
        <footer>
            <p>&copy; CSCI 8710 Company 2013</p>
        </footer>
    </div>

    <!-- /container -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angularjsApp")
    @Scripts.Render("~/bundles/angularjsCtrl")
</body>
</html>
